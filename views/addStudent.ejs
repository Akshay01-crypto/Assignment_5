<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Add a New Student</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/students/add" onsubmit="return showAlert();">
                    <fieldset>
                        <legend class="mb-4">Personal Information</legend>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="firstName" class="form-label">First Name:</label>
                                    <input class="form-control" id="firstName" name="firstName" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="lastName" class="form-label">Last Name:</label>
                                    <input class="form-control" id="lastName" name="lastName" type="text" required />
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="email" class="form-label">Email:</label>
                            <input class="form-control" id="email" name="email" type="email" required />
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="addressStreet" class="form-label">Address (Street):</label>
                                    <input class="form-control" id="addressStreet" name="addressStreet" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="city" class="form-label">Address (City):</label>
                                    <input class="form-control" id="city" name="city" type="text" required />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group mb-3">
                                    <label for="province" class="form-label">Address (Province):</label>
                                    <input class="form-control" id="province" name="province" type="text" required />
                                </div>
                            </div>
                        </div>
                    </fieldset>

                    <fieldset>
                        <legend class="mb-4">Academic Information</legend>
                        <div class="form-group form-check mb-3">
                            <input class="form-check-input" id="TA" name="TA" type="checkbox">
                            <label class="form-check-label" for="TA">Teaching Assistant</label>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Enrollment Status:</label><br>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="fullTime" value="Full Time" checked>
                                <label class="form-check-label" for="fullTime">Full Time</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="status" id="partTime" value="Part Time">
                                <label class="form-check-label" for="partTime">Part Time</label>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="course" class="form-label">Enrolled in Course:</label>
                            <select class="form-control" id="course" name="course">
                                <option value="1">Relational Database Design and Implementation</option>
                                <option value="2">Java Programming</option>
                                <option value="3">Introduction to Cloud Computing</option>
                                <option value="4">Database Administration and Management</option>
                                <option value="5">Web Programming</option>
                                <option value="6">Applied Capstone Project</option>
                                <option value="7">Database Connectivity Using Java</option>
                            </select>
                        </div>
                    </fieldset>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary me-2">Add Student</button>
                        <a href="/students" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function showAlert() {
        alert('Student added successfully!');
        return true;
    }
</script>